# Environment Configuration Template
# Copy this file to .env and modify the values

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Server Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000
WORKERS=4

# Database Configuration
DATABASE_URL=sqlite:///ransomware_detection.db
DATABASE_POOL_SIZE=20

# Security Settings
SESSION_TIMEOUT=3600
CSRF_TOKEN_EXPIRY=1800
API_RATE_LIMIT=100

# Monitoring Configuration
MONITORING_INTERVAL=5
HIGH_RISK_THRESHOLD=0.7
MEDIUM_RISK_THRESHOLD=0.4
MAX_ALERTS=1000
MAX_DETECTIONS=10000

# Resource Limits
MAX_CPU_USAGE=10
MAX_MEMORY_USAGE=100
MAX_PROCESSES_TO_MONITOR=100

# File System Monitoring
FILE_MONITOR_PATHS=/home,/Documents,/Desktop
FILE_OPERATION_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/ransomware_detector.log
WEB_LOG_FILE=logs/web_server.log

# Model Configuration
MODEL_PATH=models/ransomware_model.joblib
SCALER_PATH=models/feature_scaler.joblib
MODEL_UPDATE_INTERVAL=86400

# Email Notifications (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-app-password
ALERT_EMAIL_RECIPIENTS=admin@example.com,security@example.com

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=ransomware-detection-data

# External APIs (Optional)
VIRUSTOTAL_API_KEY=your-virustotal-api-key
THREAT_INTELLIGENCE_API_KEY=your-threat-intel-api-key

# Performance Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics
PROMETHEUS_PORT=9090